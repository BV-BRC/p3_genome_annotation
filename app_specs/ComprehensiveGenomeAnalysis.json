{
  "default_memory": "100G",
  "description": "Analyze a genome from reads or contigs, generating a detailed analysis report.",
  "id": "ComprehensiveGenomeAnalysis",
  "label": "Comprehensive Genome Analysis",
  "parameters": [
    {
      "comment": "Start of common parameters"
    },
    {
      "default": null,
      "desc": "Input type (reads / contigs / genbank)",
      "enum": [
        "reads",
        "contigs",
        "genbank"
      ],
      "id": "input_type",
      "label": "Input Type",
      "required": 1,
      "type": "enum"
    },
    {
      "default": null,
      "desc": "Path to which the output will be written. Defaults to the directory containing the input data. ",
      "id": "output_path",
      "label": "Output Folder",
      "required": 1,
      "type": "folder"
    },
    {
      "default": null,
      "desc": "Basename for the generated output files. Defaults to the basename of the input data.",
      "id": "output_file",
      "label": "File Basename",
      "required": 1,
      "type": "wsid"
    },
    {
      "comment": "Start of assembly parameters"
    },
    {
      "allow_multiple": true,
      "default": null,
      "group": [
        {
          "desc": "FASTQ or FASTA file of reads",
          "id": "read1",
          "label": "Read file 1",
          "required": 0,
          "type": "wstype",
          "wstype": "ReadFile"
        },
        {
          "desc": "FASTQ or FASTA file of reads",
          "id": "read2",
          "label": "Read file 2",
          "required": 0,
          "type": "wstype",
          "wstype": "ReadFile"
        },
        {
          "default": "infer",
          "desc": "Sequencing platform used to generate the read library",
          "enum": [
            "infer",
            "illumina",
            "pacbio",
            "pacbio_hifi",
            "nanopore"
          ],
          "id": "platform",
          "label": "Sequencing Platform",
          "required": 0,
          "type": "enum"
        },
        {
          "default": false,
          "id": "interleaved",
          "label": "Are the paired end reads interleaved?",
          "required": 0,
          "type": "bool"
        },
        {
          "default": false,
          "id": "read_orientation_outward",
          "label": "Do the two reads in each pair face outward?",
          "required": 0,
          "type": "bool"
        },
        {
          "default": null,
          "id": "insert_size_mean",
          "label": "Average insert size",
          "required": 0,
          "type": "int"
        },
        {
          "default": null,
          "id": "insert_size_stdev",
          "label": "Average insert standard deviation",
          "required": 0,
          "type": "float"
        }
      ],
      "id": "paired_end_libs",
      "required": 0,
      "type": "group"
    },
    {
      "allow_multiple": true,
      "default": null,
      "group": [
        {
          "desc": "FASTQ, FASTA or H5 file of reads",
          "id": "read",
          "label": "Read file",
          "required": 0,
          "type": "wstype",
          "wstype": "ReadFile"
        },
        {
          "default": "infer",
          "desc": "Sequencing platform used to generate the read library",
          "enum": [
            "infer",
            "illumina",
            "pacbio",
            "pacbio_hifi",
            "nanopore"
          ],
          "id": "platform",
          "label": "Sequencing Platform",
          "required": 0,
          "type": "enum"
        }
      ],
      "id": "single_end_libs",
      "required": 0,
      "type": "group"
    },
    {
      "allow_multiple": true,
      "default": null,
      "desc": "Sequence Read Archive (SRA) Run ID",
      "id": "srr_ids",
      "label": "SRR ID",
      "required": 0,
      "type": "string"
    },
    {
      "default": null,
      "desc": "Reference set of assembled DNA contigs",
      "id": "reference_assembly",
      "label": "Contig file",
      "required": 0,
      "type": "wstype",
      "wstype": "Contigs"
    },
    {
      "default": "auto",
      "desc": "Recipe used for assembly",
      "enum": [
        "auto",
        "unicycler",
        "canu",
        "spades",
        "meta-spades",
        "plasmid-spades",
        "single-cell",
        "flye"
      ],
      "id": "recipe",
      "label": "Assembly recipe",
      "required": 0,
      "type": "enum"
    },
    {
      "default": 2,
      "desc": "Racon polishing iterations (for long reads)",
      "id": "racon_iter",
      "label": "Racon iterations",
      "required": 0,
      "type": "int"
    },
    {
      "default": 2,
      "desc": "Pilon polishing iterations (for short reads)",
      "id": "pilon_iter",
      "label": "Pilon iterations",
      "required": 0,
      "type": "int"
    },
    {
      "default": false,
      "desc": "Trim reads before assembly",
      "id": "trim",
      "label": "trim_reads",
      "required": 0,
      "type": "boolean"
    },
    {
      "default": 300,
      "desc": "Filter out short contigs in final assembly",
      "id": "min_contig_len",
      "label": "Minimal output contig length",
      "required": 0,
      "type": "int"
    },
    {
      "default": 5,
      "desc": "Filter out contigs with low read depth in final assembly",
      "id": "min_contig_cov",
      "label": "Minimal output contig coverage",
      "required": 0,
      "type": "float"
    },
    {
      "default": "5M",
      "desc": "Estimated genome size (for canu)",
      "id": "genome_size",
      "label": "Genome Size",
      "required": 0,
      "type": "string"
    },
    {
      "comment": "Start of annotation parameters. Exactly one of reads, contigs, or genbank file input is required."
    },
    {
      "default": null,
      "desc": "Preannotated genome object",
      "id": "gto",
      "label": "Preannotated genome object",
      "required": 0,
      "type": "wstype",
      "wstype": "Genome"
    },
    {
      "default": null,
      "desc": "Genome to process",
      "id": "genbank_file",
      "label": "Genbank file",
      "required": 0,
      "type": "wstype",
      "wstype": "genbank_file"
    },
    {
      "default": null,
      "desc": "Input set of DNA contigs for annotation",
      "id": "contigs",
      "label": "Contig file",
      "required": 0,
      "type": "wstype",
      "wstype": "Contigs"
    },
    {
      "default": null,
      "desc": "Scientific name of genome to be annotated",
      "id": "scientific_name",
      "label": "Scientific Name",
      "required": 1,
      "type": "string"
    },
    {
      "default": null,
      "desc": "NCBI Taxonomy identfier for this genome",
      "id": "taxonomy_id",
      "label": "NCBI Taxonomy ID",
      "required": 0,
      "type": "int"
    },
    {
      "default": 0,
      "desc": "Genetic code used in translation of DNA sequences",
      "enum": [
        0,
        1,
        4,
        11,
        25
      ],
      "id": "code",
      "label": "Genetic Code",
      "required": 1,
      "type": "int"
    },
    {
      "default": "auto",
      "desc": "Domain of the submitted genome",
      "enum": [
        "Bacteria",
        "Archaea",
        "Viruses",
        "auto"
      ],
      "id": "domain",
      "label": "Domain",
      "required": 1,
      "type": "enum"
    },
    {
      "comment": "Control parameters"
    },
    {
      "default": false,
      "desc": "Make this genome public",
      "id": "public",
      "label": "Public",
      "required": 0,
      "type": "bool"
    },
    {
      "default": false,
      "desc": "If set, don't wait for the indexing to finish before marking the job complete.",
      "id": "queue_nowait",
      "label": "Don't wait on indexing queue",
      "required": 0,
      "type": "bool"
    },
    {
      "default": false,
      "desc": "If set, don't index this genome in solr. It will not be available for analysis through the PATRIC site.",
      "id": "skip_indexing",
      "label": "Don't index genome",
      "required": 0,
      "type": "bool"
    },
    {
      "default": null,
      "desc": "Reference genome ID",
      "id": "reference_genome_id",
      "label": "Reference genome ID",
      "required": 0,
      "type": "string"
    },
    {
      "default": null,
      "desc": "(Internal) Parent job for this annotation",
      "id": "_parent_job",
      "label": "(Internal) Parent job for this annotation",
      "required": 0,
      "type": "string"
    },
    {
      "default": null,
      "desc": "Specifies a custom workflow document (expert).",
      "id": "workflow",
      "label": "Custom workflow",
      "required": 0,
      "type": "string"
    },
    {
      "default": null,
      "desc": "If enabled, run quality analysis on genome",
      "id": "analyze_quality",
      "label": "Enable quality analysis of genome",
      "required": 0,
      "type": "bool"
    },
    {
      "default": 0,
      "desc": "Debugging level.",
      "id": "debug_level",
      "label": "Debug level",
      "required": 0,
      "type": "int"
    }
  ],
  "script": "App-ComprehensiveGenomeAnalysis"
}
